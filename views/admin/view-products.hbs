      <link href=" stylesheets/main.css" rel="stylesheet">

  <header id="header" class="header d-flex align-items-center fixed-top">
    <div class="header-container container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

      <img src="images/img/brands/last_logo_.png" style="width: 100px; height: auto; float: left;">


      <a href="index.html" class="logo d-flex align-items-center me-auto me-xl-0">
      
      </a>

      <nav id="navmenu" class="navmenu">
        <ul>
          <li><a href="#hero" class="active">Home</a></li>
          <li><a href="#about">About</a></li>
          <li><a href="#clients">Clients          </a></li>
          <li><a href="#Brand1">Brands</a></li>
   
       
         
          <li><a href="#contact">Contact</a></li>
        </ul>
        <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
      </nav>

      <a class="btn-getstarted" href="/admin/add-product">ADD BRANDS</a>

    </div>
  </header>


<section>
  <div class="container mt-5">
      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>Details</h2>
        <div><span>View Brands</span></div>
      </div><!-- End Section Title -->    
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
      {{#each products}}
        <div class="col">
          <div class="card h-100">
            <img 
              src="{{this.img}}" 
              class="card-img-top" 
              style="height: 190px; object-fit: cover;" 
              alt="{{this.name}}">  
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text text-truncate" style="max-height: 4rem; overflow: hidden;">{{this.description}}</p>
              <p class="card-text"><strong>Category:</strong> {{this.category}}</p>
            </div>
            <div class="card-footer">
              <form action="/admin/delete-product/{{this._id}}" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>
